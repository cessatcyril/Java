                           <children>
                              <RadioButton fx:id="casseMinuscule" mnemonicParsing="false" onAction="#casseMinuscule_cocher" prefWidth="105.0" text="Minuscule">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="casse1" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton fx:id="casseMajuscule" mnemonicParsing="false" onAction="#casseMajuscule_cocher" text="Majuscule" toggleGroup="$casse1" />
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
               </content>
            </TitledPane>
         </children>
