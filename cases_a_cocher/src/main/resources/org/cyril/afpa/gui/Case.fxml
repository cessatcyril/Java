                  <AnchorPane>
                     <children>
                        <VBox alignment="CENTER_LEFT" layoutX="14.0" layoutY="14.0" spacing="20.0">
                           <children>
                              <RadioButton fx:id="texteRouge" mnemonicParsing="false" onAction="#texteRouge_cocher" prefWidth="105.0" text="Rouge">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="text1" />
